<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"

    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".User.ActivityKayit" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="146dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@mipmap/car2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="CARSHARING"
                    android:textColor="@color/bottombar"
                    android:textSize="43dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_form_rounded"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/adi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="Adınız"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/soyadi"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="Soyadınız"
                        android:padding="5dp"
                        android:singleLine="true" />


                    <TextView
                        android:id="@+id/dogumtarih"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="Doğum Tarihinizi Seçiniz"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/eposta"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="E-posta"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/parola"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Parola"

                        android:inputType="textPassword"
                        android:padding="5dp" />
                    <EditText
                        android:id="@+id/parola2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="Parola"

                        android:inputType="textPassword"
                        android:padding="5dp" />

                    <EditText
                        android:id="@+id/tc"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="TC Kimlik Numaranız"
                        android:padding="5dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/telefon"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@null"
                        android:hint="Telefon Numaranız"
                        android:padding="5dp"
                        android:singleLine="true" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_kayitol"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/bg_button_rounded"
                    android:text="Kayıt Ol"
                    android:textColor="@color/bottombar" />
            </LinearLayout>

    </ScrollView>

</RelativeLayout>